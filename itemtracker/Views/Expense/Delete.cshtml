@model itemtracker.Models.Expense
<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Menu</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="FullName"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="BussinessUnit"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Menu"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Allergy"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Date"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <input asp-for="FullName"  class="form-control"/>
                    </div>
                    <div class="col-2">
                        <input asp-for="BussinessUnit" disable class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Menu" disable class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="Allergy" disable class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Date" disable class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
   </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
