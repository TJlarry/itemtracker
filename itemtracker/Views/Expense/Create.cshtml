@model itemtracker.Models.Expense
<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Menu</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="FullName"> </label>
                    </div>
                    <div class="col-2">
                        <label asp-for="BussinessUnit"> </label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Menu"> </label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Allergy"> </label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Date"> </label>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="BussinessUnit" class="form-control" />
                        <span asp-validation-for="BussinessUnit" class="text-danger"></span>
                    </div>
                    <div class="col-3">

                        <input asp-for="Menu" class="form-control" list=Menuu placeholder="Type to search..." />
                        <datalist id="Menuu">
                            <option value="Lasagna-meat and vegetarian"></option>
                            <option value="Caesar Salad"></option>
                            <option value="Garlic Toast"></option>
                        </datalist>
                        <span asp-validation-for="Menu" class="text-danger"></span>
                    </div>
                <div class="col-2">
                        <input asp-for="Allergy" class="form-control" />                    
                        <span asp-validation-for="Allergy" class="text-danger"></span>
                    </div>
                <div class="col-3">
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="place order" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
@section Scripts{ 
@{ <partial name="_ValidationScriptsPartial"/>}

}

